---
import AdminDashboard from '../components/admin/AdminDashboard';

// Basic auth check
const authHeader = Astro.request.headers.get('authorization');
let isAuthenticated = false;

if (authHeader) {
  const [type, credentials] = authHeader.split(' ');
  if (type === 'Basic') {
    const decoded = atob(credentials);
    const [username, password] = decoded.split(':');
    // Check against environment variable
    isAuthenticated = username.length > 0 && password === import.meta.env.ADMIN_PASSWORD;
  }
}

// If not authenticated, return 401 with WWW-Authenticate header
if (!isAuthenticated) {
  return new Response('Unauthorized', {
    status: 401,
    headers: {
      'WWW-Authenticate': 'Basic realm="Admin Area"',
    },
  });
}

const cloudName = import.meta.env.CLOUDINARY_CLOUD_NAME;
const uploadPreset = import.meta.env.CLOUDINARY_UPLOAD_PRESET;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Admin Dashboard - Bred's Commissions</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg: #f5f5f5;
      --card-bg: #ffffff;
      --text: #1a1a1a;
      --text-secondary: #666666;
      --accent: #916A5D;
      --accent-hover: #7a5a4f;
      --success: #4A7A4A;
      --warning: #D4AA00;
      --error: #A85454;
      --border: #e0e0e0;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
    }

    .admin-header {
      background: var(--accent);
      color: white;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .admin-header h1 {
      font-size: 1.25rem;
      font-weight: 600;
    }

    .admin-header a {
      color: white;
      text-decoration: none;
      opacity: 0.9;
    }

    .admin-header a:hover {
      opacity: 1;
    }

    .admin-dashboard {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .admin-nav {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 2rem;
      border-bottom: 2px solid var(--border);
      padding-bottom: 1rem;
    }

    .admin-nav button {
      padding: 0.75rem 1.5rem;
      border: none;
      background: transparent;
      cursor: pointer;
      font-size: 1rem;
      color: var(--text-secondary);
      border-radius: 8px 8px 0 0;
      transition: all 0.2s;
    }

    .admin-nav button:hover {
      background: var(--card-bg);
      color: var(--text);
    }

    .admin-nav button.active {
      background: var(--accent);
      color: white;
    }

    .admin-section {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .admin-section h2 {
      margin-bottom: 1.5rem;
      color: var(--accent);
    }

    .admin-section h3 {
      margin: 1.5rem 0 1rem;
      font-size: 1.1rem;
    }

    .admin-loading, .admin-error {
      padding: 2rem;
      text-align: center;
    }

    .admin-error {
      color: var(--error);
      background: #fff5f5;
      border-radius: 8px;
      margin-bottom: 1rem;
    }

    /* Forms */
    .form-group {
      margin-bottom: 1rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: var(--text-secondary);
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid var(--border);
      border-radius: 8px;
      font-size: 1rem;
      font-family: inherit;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: var(--accent);
      box-shadow: 0 0 0 3px rgba(145, 106, 93, 0.1);
    }

    button[type="submit"],
    .upload-btn {
      background: var(--accent);
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.2s;
    }

    button[type="submit"]:hover,
    .upload-btn:hover {
      background: var(--accent-hover);
    }

    button[type="submit"]:disabled,
    .upload-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .delete-btn {
      background: var(--error);
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.875rem;
    }

    .delete-btn:hover {
      background: #8b4444;
    }

    /* Gallery List */
    .gallery-list {
      margin-top: 2rem;
    }

    .gallery-list-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      border-bottom: 1px solid var(--border);
    }

    .gallery-list-item img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 8px;
    }

    .gallery-list-item .item-info {
      flex: 1;
    }

    .gallery-list-item .category {
      display: inline-block;
      background: var(--bg);
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.75rem;
      margin-left: 0.5rem;
      text-transform: uppercase;
    }

    /* Preview Image */
    .preview-image {
      position: relative;
      display: inline-block;
    }

    .preview-image img {
      max-width: 200px;
      border-radius: 8px;
    }

    .preview-image button {
      position: absolute;
      top: 0.5rem;
      right: 0.5rem;
      background: var(--error);
      color: white;
      border: none;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.75rem;
    }

    /* Commissions Table */
    .commissions-table {
      width: 100%;
      border-collapse: collapse;
    }

    .commissions-table th,
    .commissions-table td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid var(--border);
    }

    .commissions-table th {
      background: var(--bg);
      font-weight: 600;
    }

    .commissions-table tr.status-pending {
      background: #fffbeb;
    }

    .commissions-table tr.status-in_progress {
      background: #f0f9ff;
    }

    .commissions-table tr.status-completed {
      background: #f0fdf4;
    }

    .commissions-table tr.status-rejected {
      background: #fef2f2;
    }

    .commissions-table select {
      padding: 0.5rem;
      border-radius: 6px;
      border: 1px solid var(--border);
    }

    .commissions-table button {
      background: var(--accent);
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.875rem;
    }

    /* Settings */
    .settings-form .pricing-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin: 1rem 0 2rem;
    }

    .pricing-card {
      background: var(--bg);
      padding: 1rem;
      border-radius: 8px;
    }

    .pricing-card h4 {
      margin-bottom: 0.75rem;
      color: var(--accent);
    }

    .price-input {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }

    .price-input label {
      flex: 1;
      font-size: 0.875rem;
    }

    .price-input input {
      width: 80px;
      padding: 0.5rem;
      text-align: right;
    }

    /* Add Item Form */
    .add-item-form {
      background: var(--bg);
      padding: 1.5rem;
      border-radius: 8px;
      margin-bottom: 2rem;
    }

    @media (max-width: 768px) {
      .admin-dashboard {
        padding: 1rem;
      }

      .admin-nav {
        flex-wrap: wrap;
      }

      .commissions-table {
        font-size: 0.875rem;
      }

      .commissions-table th,
      .commissions-table td {
        padding: 0.5rem;
      }
    }
  </style>
</head>
<body>
  <header class="admin-header">
    <h1>Bred's Portfolio Admin</h1>
    <a href="/" target="_blank">View Site &rarr;</a>
  </header>

  <AdminDashboard
    client:only="react"
    cloudName={cloudName}
    uploadPreset={uploadPreset}
  />
</body>
</html>
